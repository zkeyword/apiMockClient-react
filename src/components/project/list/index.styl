@import '../../../assets/styles/lib/mixin.styl'

.page-project
    width: 100%
    height: 100%
    padding: 20px 40px
    box-sizing: border-box

    .addButton
        margin-bottom: 20px 

    .ui-tableList
        width: 100%
        height: calc( 100% - 45px )
        overflow-y: auto

        .item
            width: 200px
            height: 200px
            margin: 0 16px 16px 0 
            padding: 20px
            float: left
            border:1px solid rgba(#000,.1)
            box-shadow: 2px 2px 5px rgba(#000,.1)
            border-radius: 10px
            position: relative

            &:hover
                background: rgba(#000,.03)

                .item-ico
                    display: block

            .item-ico
                position: absolute
                top: 10px
                right: 10px
                display: none

                .anticon-edit,.anticon-delete
                    margin: 0 10px
                    font-size: 16px
                    color: #000
                    float: right
                    cursor: pointer

            .item-name
                padding: 50px 0 0
                font-weight: bold
                font-size: 20px
                text-align: center
                width: 160px
                one-line()

            .item-description
                color: #ccc
                text-align: center
                
